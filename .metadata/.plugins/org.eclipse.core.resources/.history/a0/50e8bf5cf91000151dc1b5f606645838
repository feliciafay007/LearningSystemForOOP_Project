	private static final long serialVersionUID = 1L;
	private JTable jtable1; // the table displayed on the GUI
	private StudentInfoController studentinfocontroller; 
	
	
	
	
    public StudentInfoGui() {
        initComponents();
        // creates a controller for the table        
        studentinfocontroller = new StudentInfoController(this); 
            // add a JTable to the GUI
             addJTable();
      	// make primary key non-editable 
              idjTextField2.setEditable(true);  
    }

    public void addJTable() {
		// add the data and column names to a JTable  
	    jtable1 = new JTable(studentinfocontroller.getTableModel());
		Dimension d= new Dimension(500,500); //jtable1.getPreferredSize();
		
	    jtable1.setPreferredSize(d);
	    // add a ListSelectionListener to the table
	    jtable1.getSelectionModel().addListSelectionListener(studentinfocontroller);
		
	    //add the table to a scrollpane
    		scrollpane = new JScrollPane(jtable1);
			//scrollpane = jtable1.createScrollPaneForTable(jtable1);
    		//create a window
         jPanel2.setLayout(new BorderLayout());
		 jPanel2.add(scrollpane, BorderLayout.CENTER);
} 
    
    
    public void updateTable() {
		// TODO Auto-generated method stub
		
	    	jtable1.setModel(studentinfocontroller.getTableModel());
	
	}
    
    private void addjButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    	
    	String[] array = new String[jtable1.getColumnCount()];
    	array[0] = idjTextField2.getText();
    	array[1] = namejTextField1.getText();
    	array[2] = agejTextField4.getText();
    	array[3] = nojTextField3.getText();
    	
    	
    	//send data to the controller to add it to the model
   	    studentinfocontroller.addRow(array);
    	
    }            
    
    
    

    private void addjButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    	String[] array = new String[jtable1.getColumnCount()];
    	array[0] = idjTextField2.getText();
    	array[1] = namejTextField1.getText();
    	array[2] = agejTextField4.getText();
    	array[3] = nojTextField3.getText();
    	
    	//send data to the controller to add it to the model
   	    studentinfocontroller.updateRow(array);
   	 
    	
    }                                           

    private void addjButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    	String[] array = new String[jtable1.getColumnCount()];
    	array[0] = idjTextField2.getText();
    	array[1] = namejTextField1.getText();
    	array[2] = agejTextField4.getText();
    	array[3] = nojTextField3.getText();
    	
    	//send data to the controller to add it to the model
   	    studentinfocontroller.deleteRow(array);
    	
    	
    	
    	
    	
    } 
    
    

    
    
    
    
    
    
    
    
    
    
    
