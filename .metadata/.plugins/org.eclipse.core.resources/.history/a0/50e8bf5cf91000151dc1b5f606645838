    }
 // display data on nameTextField
    public void setNameTextField(String value) {
    	namejTextField1.setText(value);
    }
    
    public void setAgeTextField(String value) {
    	agejTextField4.setText(value);
    }
 // display data on the noTextField
    public void setnoTextField(String value) {
    	nojTextField3.setText(value);
    }
   
    
    
